\begin{frame}{Block Structure}
  \centering
  \begin{tikzpicture}[
      every node/.style={draw, rounded corners, align=center, minimum width=2cm, minimum height=1cm},
      redblock/.style={fill=red!70, text=white},
      greenblock/.style={fill=green!70, text=white},
      blueblock/.style={fill=blue!70, text=white}
    ]

    % Nodes
    \node[redblock] (A) at (0, 2) {A}; % A at top center
    \node[greenblock] (B) at (0, 0) {B}; % B in center
    \node[blueblock] (C) at (3, 0) {C}; % C to the right of B

    % Connections
    \draw[->] (A) -- (B); % A to B
    \draw[->] (B) -- (C); % B to C

  \end{tikzpicture}
\end{frame}

\begin{frame}{Two Column Layout}
  \begin{columns}
    \begin{column}{0.5\textwidth}
      \begin{itemize}
        \item Item 1A
        \item Item 2A
        \item Item 3A
      \end{itemize}
    \end{column}
    
    \begin{column}{0.5\textwidth}
      \begin{itemize}
        \item Item 1B
        \item Item 2B
        \item Item 3B
      \end{itemize}
    \end{column}
  \end{columns}
\end{frame}

\begin{frame}{Two Columns with Two Rows Each}
  \begin{columns}
    % Left Column
    \begin{column}{0.5\textwidth}
      \begin{itemize}
        \item[Row 1] Item 1A
        \item Item 2A
        \item Item 3A
      \end{itemize}
      \begin{itemize}
        \item[Row 2] Item 1B
        \item Item 2B
        \item Item 3B
      \end{itemize}
    \end{column}
    
    % Right Column
    \begin{column}{0.5\textwidth}
      \begin{itemize}
        \item[Row 1] Item 1C
        \item Item 2C
        \item Item 3C
      \end{itemize}
      \begin{itemize}
        \item[Row 2] Item 1D
        \item Item 2D
        \item Item 3D
      \end{itemize}
    \end{column}
  \end{columns}
\end{frame}


